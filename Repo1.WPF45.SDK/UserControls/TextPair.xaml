<UserControl x:Class="Repo1.WPF45.SDK.UserControls.TextPair"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Repo1.WPF45.SDK.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding Text1Width, 
                              RelativeSource={RelativeSource 
                              AncestorType=local:TextPair}}"
                              />

            <ColumnDefinition Width="{Binding GapWidth, 
                              RelativeSource={RelativeSource 
                              AncestorType=local:TextPair}}"
                              />

            <ColumnDefinition Width="{Binding Text2Width, 
                              RelativeSource={RelativeSource 
                              AncestorType=local:TextPair}}"
                              />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="txt1"
                   Grid.Column="0"
                   />

        <Rectangle Grid.Column="1" />

        <TextBlock x:Name="txt2"
                   Grid.Column="2"
                   />
    </Grid>
</UserControl>
